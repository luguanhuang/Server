<?xml version="1.0" encoding="utf-8"?>


<IDIPServer name="idip" id="$server_id$">

	<Listen>
		<peer ip="0.0.0.0" port="29000" handler="mslink" sendBufSize="0" recvBufSize="0"/>
		<peer ip="0.0.0.0" port="29001" handler="loginlink" sendBufSize="1024000" recvBufSize="1024000"/>
	</Listen>

	<!-- rolltype (day, hour) -->
	<LogType  file="1" console="0" rolltype="hour"/>
	<LogLevel info="1" debug="0" warn="1" error="1" fatal="1"/>

	<RootPath dir="idipconf"/>
	<TLogConfigFile path="$tlog_cfg_file$"/>
</IDIPServer>